{
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["test/", "dist/"],
  "rules": {
    "prettier/prettier": "error"
  }
}
