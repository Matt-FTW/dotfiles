#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.
# Author: pfh
# Source: http://crunchbang.org/forums/viewtopic.php?pid=127737#p127737

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"
  
  blackfbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
  cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

initializeANSI

cat << EOF

 ${white}â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—
 ${white}â•‘ ${redf}  â–„â–ˆ â–ˆâ–„${reset}    ${greenf}  â–„â–ˆ â–ˆâ–„${reset}    ${yellowf}  â–„â–ˆ â–ˆâ–„${reset}    ${bluef}  â–„â–ˆ â–ˆâ–„${reset}    ${purplef}  â–„â–ˆ â–ˆâ–„${reset}    ${cyanf}  â–„â–ˆ â–ˆâ–„${reset}   ${white}â•‘
 ${white}â•‘ ${boldon}${redfbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset}  ${boldon}${greenfbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset}  ${boldon}${yellowfbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset}  ${boldon}${bluefbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset}  ${boldon}${purplefbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset}  ${boldon}${cyanfbright}â–„â–ˆâ—„â–º â—„â–ºâ–ˆâ–„${reset} ${white}â•‘
 ${white}â•‘ ${boldon}${redfbright}â–€â–ˆ  î º  â–ˆâ–€${reset}  ${boldon}${greenfbright}â–€â–ˆ  î º  â–ˆâ–€${reset}  ${boldon}${yellowfbright}â–€â–ˆ  î º  â–ˆâ–€${reset}  ${boldon}${bluefbright}â–€â–ˆ  î º  â–ˆâ–€${reset}  ${boldon}${purplefbright}â–€â–ˆ  î º  â–ˆâ–€${reset}  ${boldon}${cyanfbright}â–€â–ˆ  î º  â–ˆâ–€${reset} ${white}â•‘
 ${white}â•‘ ${redf}  â–€â–ˆ â–ˆâ–€${reset}    ${greenf}  â–€â–ˆ â–ˆâ–€${reset}    ${yellowf}  â–€â–ˆ â–ˆâ–€${reset}    ${bluef}  â–€â–ˆ â–ˆâ–€${reset}    ${purplef}  â–€â–ˆ â–ˆâ–€${reset}    ${cyanf}  â–€â–ˆ â–ˆâ–€${reset}   ${white}â•‘
 ${white}â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

