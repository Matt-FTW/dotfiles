#!/bin/sh
#  
#    Author: Ivo
#  	 Source: http://crunchbang.org/forums/viewtopic.php?pid=150114#p150114
#    ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"   whitef="${esc}[37m"
  
  blackfbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
  cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"   whitefbright="${esc}[97m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.

initializeANSI

cat << EOF  
  
${boldon}${redfbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} ${boldon}${greenfbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} ${boldon}${yellowfbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} ${boldon}${bluefbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} ${boldon}${purplefbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} ${boldon}${cyanfbright}   â–ˆâ–ˆ     â–ˆâ–ˆ ${reset} 
${boldon}${redfbright}  â–ˆ${whitef} â– ${reset}${boldon}${redfbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${redfbright} â–ˆ${reset} ${boldon}${greenfbright}  â–ˆ${whitef} â– ${reset}${boldon}${greenfbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${greenfbright} â–ˆ${reset} ${boldon}${yellowfbright}  â–ˆ${whitef} â– ${reset}${boldon}${yellowfbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${yellowfbright} â–ˆ${reset} ${boldon}${bluefbright}  â–ˆ${whitef} â– ${reset}${boldon}${bluefbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${bluefbright} â–ˆ${reset} ${boldon}${purplefbright}  â–ˆ${whitef} â– ${reset}${boldon}${purplefbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${purplefbright} â–ˆ${reset} ${boldon}${cyanfbright}  â–ˆ${whitef} â– ${reset}${boldon}${cyanfbright}â–ˆ   â–ˆ${whitef}â– ${reset}${boldon}${cyanfbright} â–ˆ${reset} 
${redf}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset} ${greenf}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset} ${yellowf}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset} ${bluef}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset} ${purplef}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset} ${cyanf}   â–ˆ â–ˆ   â–ˆ â–ˆ ${reset}
${redf}     â–ˆ â–ˆ â–ˆ   ${reset} ${greenf}     â–ˆ â–ˆ â–ˆ   ${reset} ${yellowf}     â–ˆ â–ˆ â–ˆ   ${reset} ${bluef}     â–ˆ â–ˆ â–ˆ   ${reset} ${purplef}     â–ˆ â–ˆ â–ˆ   ${reset} ${cyanf}     â–ˆ â–ˆ â–ˆ   ${reset}
${redf}      =â– =    ${reset} ${greenf}      =â– =    ${reset} ${yellowf}      =â– =    ${reset} ${bluef}      =â– =    ${reset} ${purplef}      =â– =    ${reset} ${cyanf}      =â– =    ${reset}                                              


 
EOF
