#!/bin/sh

# ANSI Color -- use these variables to easily have different color
#    and format output. Make sure to output the reset sequence after 
#    colors (f = foreground, b = background), and use the 'off'
#    feature for anything you turn on.
# Author: pfh
# Source: http://crunchbang.org/forums/viewtopic.php?pid=129265#p129265

initializeANSI()
{
  esc=""

  blackf="${esc}[30m";   redf="${esc}[31m";    greenf="${esc}[32m"
  yellowf="${esc}[33m"   bluef="${esc}[34m";   purplef="${esc}[35m"
  cyanf="${esc}[36m";    whitef="${esc}[37m"
  
  blackfbright="${esc}[90m";   redfbright="${esc}[91m";    greenfbright="${esc}[92m"
  yellowfbright="${esc}[93m"   bluefbright="${esc}[94m";   purplefbright="${esc}[95m"
  cyanfbright="${esc}[96m";    whitefbright="${esc}[97m"
  
  blackb="${esc}[40m";   redb="${esc}[41m";    greenb="${esc}[42m"
  yellowb="${esc}[43m"   blueb="${esc}[44m";   purpleb="${esc}[45m"
  cyanb="${esc}[46m";    whiteb="${esc}[47m"

  boldon="${esc}[1m";    boldoff="${esc}[22m"
  italicson="${esc}[3m"; italicsoff="${esc}[23m"
  ulon="${esc}[4m";      uloff="${esc}[24m"
  invon="${esc}[7m";     invoff="${esc}[27m"

  reset="${esc}[0m"
}

# note in this first use that switching colors doesn't require a reset
# first - the new color overrides the old one.
# ****************************** Building blocks: ‚ñà ‚ñì ‚ñí ‚ñë ‚ñÑ ‚ñÄ ‚ñê ‚ñå ‚óè  ‚ïê ‚ïë ‚ïî ‚ï¶ ‚ïó ‚ïö ‚ï© ‚ïù ‚ñ† ‚ñ¨ ‚ñ≤ ‚ñº ‚óÑ ‚ñ∫ 

initializeANSI

cat << EOF

${invon}
${redf}   ‚ñÑ‚ñà     ‚ñà‚ñÑ    ${greenf}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${yellowf}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${bluef}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${purplef}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${cyanf}   ‚ñÑ‚ñà     ‚ñà‚ñÑ   
${redf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${greenf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${yellowf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${bluef} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${purplef} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${cyanf} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ 
${redf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${greenf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${yellowf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${bluef} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${purplef} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${cyanf} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà 
${redf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${greenf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${yellowf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${bluef} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${purplef} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${cyanf} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà 
${redf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${greenf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${yellowf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${bluef} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${purplef} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${cyanf} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ 
${redf}   ‚ñÄ‚ñà     ‚ñà‚ñÄ    ${greenf}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${yellowf}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${bluef}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${purplef}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${cyanf}   ‚ñÄ‚ñà     ‚ñà‚ñÄ   
${boldon}${invon}
${redfbright}   ‚ñÑ‚ñà     ‚ñà‚ñÑ    ${greenfbright}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${yellowfbright}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${bluefbright}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${purplefbright}   ‚ñÑ‚ñÑ     ‚ñÑ‚ñÑ    ${cyanfbright}   ‚ñÑ‚ñà     ‚ñà‚ñÑ   
${redfbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${greenfbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${yellowfbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${bluefbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${purplefbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ  ${cyanfbright} ‚ñÑ‚ñà‚ñÄ  ‚ñÑ‚ñÑ‚ñÑ  ‚ñÄ‚ñà‚ñÑ 
${redfbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${greenfbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${yellowfbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${bluefbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${purplefbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà  ${cyanfbright} ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà‚ñÄ‚ñà‚ñà‚ñÑ‚ñÑ‚ñà‚ñà 
${redfbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${greenfbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${yellowfbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${bluefbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${purplefbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà  ${cyanfbright} ‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà‚ñà‚ñà‚ñà‚ñÄ‚ñÄ‚ñà‚ñà 
${redfbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${greenfbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${yellowfbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${bluefbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${purplefbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ  ${cyanfbright} ‚ñÄ‚ñà‚ñÑ  ‚ñÄ‚ñÄ‚ñÄ  ‚ñÑ‚ñà‚ñÄ 
${redfbright}   ‚ñÄ‚ñà     ‚ñà‚ñÄ    ${greenfbright}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${yellowfbright}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${bluefbright}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${purplefbright}   ‚ñÄ‚ñÄ     ‚ñÄ‚ñÄ    ${cyanfbright}   ‚ñÄ‚ñà     ‚ñà‚ñÄ   
${reset}

EOF
